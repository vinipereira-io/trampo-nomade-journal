{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Node",
        "target": "ES2020",
        "jsx": "react",
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "baseUrl": "src",
        "paths": {
            "components/*": ["src/components/*"],
            "media/*": ["src/media/*"]
        }
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}